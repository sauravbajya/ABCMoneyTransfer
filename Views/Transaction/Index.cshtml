@model ABCMoneyTransfer.ViewModel.TransactionFilterViewModel

@{
    ViewData["Title"] = "Index";
    int i = 1;

}

<h1>Transaction Details</h1>

<form asp-action="Index" method="get" class="mb-3">
    <div class="row">
        <div class="form-group col-md-4">
            <label asp-for="StartDate" for="StartDate">Start Date</label>
            <input asp-for="StartDate" type="date" id="StartDate" name="startDate" class="form-control" />
        </div>
        <div class="form-group col-md-4">
            <label asp-for="EndDate" for="EndDate">End Date</label>
            <input asp-for="EndDate" type="date" id="EndDate" name="endDate" class="form-control" />
        </div>
        <div class="form-group col-md-4">
            <button type="submit" class="btn btn-primary mt-4">Filter</button>
        </div>
    </div>
</form>


<div class="d-flex justify-content-end mb-3">
    <a class="btn btn-primary" asp-action="Create"><i class="fa-solid fa-money-bill-transfer"></i>Transfer Money</a>
</div>
<div class="table-responsive">

    <table class="table table-striped table-bordered " width="100%">
        <thead>
            <tr>
                <th scope="col">
                   #
                </th>
                <th scope="col">
                    @Html.DisplayName("Sender")
                </th>
                <th scope="col">
                    @Html.DisplayName("Sender Address")
                </th>
                <th scope="col">
                    @Html.DisplayName("Sender Country")
                </th>
                <th scope="col">
                    @Html.DisplayName("Receiver")
                </th>
                <th scope="col">
                    @Html.DisplayName("Receiver Address")

                </th>
                <th scope="col">
                    @Html.DisplayName("Receiver Country")

                </th>
                <th scope="col">
                    @Html.DisplayName("Bank Name")

                </th>
                <th scope="col">
                    @Html.DisplayName("Acount Number")

                </th>
                <th scope="col">
                    @Html.DisplayName("Transfer Amount (MYR)")

                </th>
                <th scope="col">
                    @Html.DisplayName("Exchange Rate")

                </th>
                <th scope="col">
                    @Html.DisplayName("Payout Amount (NPR)")

                </th>
                <th scope="col">
                    @Html.DisplayName("Transaction Date")

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Transactions)
            {
                <tr>
                    <td>
                        @(i++)
                    </td>
                    <td>
                        @($"{item.SenderFirstName} {item.SenderMiddleName} {item.SenderLastName}")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SenderAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SenderCountry)
                    </td>
                    <td>
                        @($"{item.ReceiverFirstName} {item?.ReceiverMiddleName} {item.ReceiverLastName}")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReceiverAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReceiverCountry)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BankName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccountNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TransferAmountMYR)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExchangeRate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PayoutAmountNPR)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>
